<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_black_transparent">

    <RelativeLayout
        android:layout_width="@dimen/d_876dp"
        android:layout_height="@dimen/d_688dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:background="@mipmap/new_bg_dialog_buy_vip">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/d_403dp"
            android:text="请到课程详情页购买"
            android:textColor="@color/textColorDeepNew"
            android:textSize="@dimen/s_60sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_watch_now"
            android:layout_width="@dimen/d_240dp"
            android:layout_height="@dimen/d_100dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/d_72dp"
            android:layout_marginTop="@dimen/d_50dp"
            android:background="@drawable/new_shape_orange_btn"
            android:focusable="true"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/textColorLight"
            android:textSize="@dimen/s_42sp"/>

    </RelativeLayout>
</RelativeLayout>