<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_exit_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d_72dp"
            android:text="有新版本，请更新"
            android:textColor="@color/textColor"
            android:textSize="@dimen/s_38sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d_36dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="@dimen/d_200dp"
                android:layout_height="@dimen/d_88dp"
                android:background="@drawable/selector_buy"
                android:focusable="true"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/textColor"
                android:textSize="@dimen/s_36sp" />

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="@dimen/d_200dp"
                android:layout_height="@dimen/d_88dp"
                android:layout_marginLeft="@dimen/d_40dp"
                android:background="@drawable/selector_play"
                android:focusable="true"
                android:gravity="center"
                android:text="更新"
                android:textColor="@color/textColor"
                android:textSize="@dimen/s_36sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>