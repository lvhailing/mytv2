<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="@dimen/d_268dp"
        android:layout_height="@dimen/d_308dp"
        android:layout_gravity="end"
        android:layout_marginRight="@dimen/d_256dp"
        android:background="@mipmap/buy_nothing_arrow" />

    <TextView
        android:id="@+id/tv_valid_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d_332dp"
        android:layout_marginTop="@dimen/d_24dp"
        android:text="您还没有订购，请到VIP订购进行办理"
        android:textColor="@color/textColor"
        android:textSize="@dimen/s_40sp" />
</LinearLayout>
