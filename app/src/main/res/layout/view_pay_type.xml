<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="@dimen/d_340dp"
        android:layout_height="@dimen/d_152dp"
        android:background="@color/gray_top_left"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="38"
                    android:textColor="@color/textColorOrange"
                    android:textSize="@dimen/s_58sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_yuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/d_3dp"
                    android:includeFontPadding="false"
                    android:text="元"
                    android:textColor="@color/textColorOrange"
                    android:textSize="@dimen/s_38sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_origin_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:includeFontPadding="false"
                android:text="（原价233元）"
                android:textColor="@color/textColorHint"
                android:textSize="@dimen/s_24sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_right"
        android:layout_width="@dimen/d_600dp"
        android:layout_height="@dimen/d_152dp"
        android:background="@color/gray_top_right"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_80dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_ka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="月卡"
                    android:textColor="@color/textColorOrange"
                    android:textSize="@dimen/s_44sp" />

                <LinearLayout
                    android:id="@+id/ll_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/d_12dp"
                    android:background="@drawable/bg_rect_discount"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/d_4dp"
                    android:paddingLeft="@dimen/d_18dp"
                    android:paddingRight="@dimen/d_18dp"
                    android:paddingTop="@dimen/d_4dp">

                    <ImageView
                        android:layout_width="@dimen/d_22dp"
                        android:layout_height="@dimen/d_24dp"
                        android:layout_gravity="center_vertical"
                        android:background="@mipmap/fire_yellow" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/d_12dp"
                        android:includeFontPadding="false"
                        android:text="限时特惠"
                        android:textColor="#EDD59D"
                        android:textSize="@dimen/s_24sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/d_8dp"
                android:includeFontPadding="false"
                android:text="所有视频都可以观看"
                android:textColor="@color/textColorHint"
                android:textSize="@dimen/s_32sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
