<?xml version="1.0" encoding="utf-8"?>
<com.jbtm.parentschool.widget.RecyclerScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/rl_title"
            layout="@layout/include_title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_120dp"
            android:layout_marginRight="@dimen/d_90dp"
            android:layout_marginTop="@dimen/d_80dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/d_120dp"
            android:paddingRight="@dimen/d_120dp"
            android:paddingTop="@dimen/d_30dp">

            <ImageView
                android:id="@+id/iv_course"
                android:layout_width="@dimen/d_854dp"
                android:layout_height="@dimen/d_480dp"
                android:focusable="false"
                android:scaleType="fitXY"
                tools:background="@mipmap/test2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/d_40dp">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="正面管教"
                    android:textColor="#efefef"
                    android:textSize="@dimen/s_46sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/ll_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_title"
                    android:layout_marginTop="@dimen/d_14dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_flag1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="107分钟"
                        android:textColor="#efefef"
                        android:textSize="@dimen/s_28sp" />

                    <View
                        android:layout_width="@dimen/d_2dp"
                        android:layout_height="@dimen/d_20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/d_20dp"
                        android:background="#efefef" />

                    <TextView
                        android:id="@+id/tv_flag2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d_20dp"
                        android:includeFontPadding="false"
                        android:text="2018年"
                        android:textColor="#efefef"
                        android:textSize="@dimen/s_28sp" />

                    <View
                        android:layout_width="@dimen/d_2dp"
                        android:layout_height="@dimen/d_20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/d_20dp"
                        android:background="#efefef" />

                    <TextView
                        android:id="@+id/tv_flag3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d_20dp"
                        android:includeFontPadding="false"
                        android:text="美国帮"
                        android:textColor="#efefef"
                        android:textSize="@dimen/s_28sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_exporter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_1"
                    android:layout_marginTop="@dimen/d_18dp"
                    android:includeFontPadding="false"
                    android:text="主讲专家：唐丽丽"
                    android:textColor="@color/textColorHint2"
                    android:textSize="@dimen/s_28sp" />

                <TextView
                    android:id="@+id/tv_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_exporter"
                    android:layout_marginTop="@dimen/d_18dp"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:lineSpacingMultiplier="1.3"
                    android:maxLines="2"
                    android:text="简介：孩子爱发脾气？经常气的你暴跳如雷？自己也爱发脾气？
家里经常鸡飞狗跳？90%的家庭问题都是来源于情绪孩子爱发脾气？经常气的你暴跳如雷？自己也爱发脾气？
家里经常鸡飞狗跳？90%的家庭问题都是来源于情绪"
                    android:textColor="@color/textColorHint2"
                    android:textSize="@dimen/s_28sp" />

                <RelativeLayout
                    android:id="@+id/rl_play"
                    android:layout_width="@dimen/d_192dp"
                    android:layout_height="@dimen/d_88dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/d_50dp"
                    android:background="@drawable/selector_play"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="@dimen/d_34dp"
                        android:layout_height="@dimen/d_34dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/d_40dp"
                        android:background="@mipmap/scan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/d_40dp"
                        android:text="全屏"
                        android:textColor="#fff"
                        android:textSize="@dimen/s_32sp" />

                    <requestFocus />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_buy"
                    android:layout_width="@dimen/d_192dp"
                    android:layout_height="@dimen/d_88dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/d_50dp"
                    android:layout_marginLeft="@dimen/d_222dp"
                    android:background="@drawable/selector_buy"
                    android:focusable="true"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <ImageView
                        android:layout_width="@dimen/d_34dp"
                        android:layout_height="@dimen/d_34dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/d_40dp"
                        android:background="@mipmap/money" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/d_40dp"
                        android:text="购买"
                        android:textColor="#fff"
                        android:textSize="@dimen/s_32sp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/d_24dp"
                        android:layout_height="@dimen/d_24dp"
                        android:layout_gravity="center_vertical"
                        android:background="@mipmap/time_progress" />

                    <TextView
                        android:id="@+id/tv_time_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/d_14dp"
                        android:includeFontPadding="false"
                        android:text="上次观看到66%"
                        android:textColor="@color/textColorHint2"
                        android:textSize="@dimen/s_24sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/d_120dp"
            android:paddingRight="@dimen/d_120dp"
            android:paddingTop="@dimen/d_40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d_14dp"
                android:text="选集列表"
                android:textColor="#efefef"
                android:textSize="@dimen/s_42sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 课程还在持续更新哦~"
                android:textColor="#efefef"
                android:textSize="@dimen/s_36sp"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_course"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:focusable="false"
            android:paddingBottom="@dimen/d_20dp"
            android:paddingLeft="@dimen/d_120dp"
            android:paddingRight="@dimen/d_120dp"
            android:paddingTop="@dimen/d_40dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_300dp" />
    </LinearLayout>
</com.jbtm.parentschool.widget.RecyclerScrollView>
