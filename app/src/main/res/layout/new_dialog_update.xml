<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_black_transparent">

    <RelativeLayout
        android:layout_width="@dimen/d_876dp"
        android:layout_height="@dimen/d_688dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:background="@mipmap/new_dialog_find_new_version">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/d_390dp"
            android:textColor="@color/textColorDeepNew"
            android:textSize="@dimen/s_60sp"
            tools:text="发现新版本V3.2"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/d_52dp"
            android:layout_marginTop="@dimen/d_58dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_update_now"
                android:layout_width="@dimen/d_240dp"
                android:layout_height="@dimen/d_100dp"
                android:background="@drawable/new_shape_orange_btn"
                android:focusable="true"
                android:gravity="center"
                android:text="现在更新"
                android:textColor="@color/textColorLight"
                android:textSize="@dimen/s_42sp"/>

            <TextView
                android:id="@+id/tv_update_later_on"
                android:layout_width="@dimen/d_240dp"
                android:layout_height="@dimen/d_100dp"
                android:layout_marginLeft="@dimen/d_50dp"
                android:background="@drawable/new_shape_orange_light_btn"
                android:focusable="true"
                android:gravity="center"
                android:text="稍后更新"
                android:textColor="@color/textColor"
                android:textSize="@dimen/s_42sp"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>