<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_deep"
    android:orientation="vertical">

    <LinearLayout
        style="@style/bg_personal_info"
        android:background="@mipmap/new_bg_personal_center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/d_250dp"
            android:layout_height="@dimen/d_250dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d_80dp"
            android:scaleType="fitXY"
            android:src="@mipmap/new_head_photo"/>

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d_12dp"
            android:textColor="@color/textColorDeepNew"
            android:textSize="@dimen/s_46sp"
            android:visibility="gone"
            tools:text="136********565"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d_90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d_26dp"
            android:background="@drawable/new_shape_orange_btn"
            android:paddingBottom="@dimen/d_8dp"
            android:paddingLeft="@dimen/d_65dp"
            android:paddingRight="@dimen/d_65dp"
            android:paddingTop="@dimen/d_8dp"
            android:text="请登录"
            android:textColor="@color/textColorLight"
            android:textSize="@dimen/s_54sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_240dp"
            android:layout_marginRight="@dimen/d_240dp"
            android:layout_marginTop="@dimen/d_70dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/rl_personal_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/d_140dp"
                    android:layout_height="@dimen/d_140dp"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/new_personal_info"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/tv_personal_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d_24dp"
                    android:gravity="center_horizontal"
                    android:text="个人信息"
                    android:textColor="@color/textColorDeepNew"
                    android:textSize="@dimen/s_42sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_order_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/d_140dp"
                    android:layout_height="@dimen/d_140dp"
                    android:background="@mipmap/new_order_info"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/tv_order_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d_24dp"
                    android:text="订单信息"
                    android:textColor="@color/textColorDeepNew"
                    android:textSize="@dimen/s_42sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_watch_history"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/d_140dp"
                    android:layout_height="@dimen/d_140dp"
                    android:background="@mipmap/new_watch_history"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/tv_watch_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/d_24dp"
                    android:text="观看记录"
                    android:textColor="@color/textColorDeepNew"
                    android:textSize="@dimen/s_42sp"/>
            </LinearLayout>

        </LinearLayout>

        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/d_127dp"-->
        <!--android:background="@color/transparent"/>-->

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/d_76dp"
        android:layout_marginRight="@dimen/d_127dp">

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已更新到"
            android:textColor="@color/textColorLight"
            android:textSize="@dimen/s_36sp"
            />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_16dp"
            android:layout_toRightOf="@id/tv_left"
            android:text="V3.2.2"
            android:textColor="@color/textColorLight"
            android:textSize="@dimen/s_36sp"/>
    </RelativeLayout>

</RelativeLayout>