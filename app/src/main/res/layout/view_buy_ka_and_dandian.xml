<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_dandian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/d_180dp"
        android:layout_marginLeft="@dimen/d_64dp"
        android:layout_marginTop="@dimen/d_64dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="恭喜您已订购"
                android:textColor="@color/textColor"
                android:textSize="@dimen/s_60sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_ka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorOrange"
                android:textSize="@dimen/s_60sp"
                android:textStyle="bold"
                tools:text="家长学堂包年业务" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/d_22dp"
            android:paddingRight="@dimen/d_22dp"
            android:paddingTop="@dimen/d_22dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余时间："
                android:textColor="@color/textColor"
                android:textSize="@dimen/s_34sp" />

            <TextView
                android:id="@+id/tv_valid_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:textSize="@dimen/s_46sp"
                android:textStyle="bold"
                tools:text="26天5小时分钟" />

            <TextView
                android:id="@+id/tv_buy_again"
                android:layout_width="@dimen/d_120dp"
                android:layout_height="@dimen/d_60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/d_38dp"
                android:background="@drawable/gradient_yellow"
                android:focusable="true"
                android:gravity="center"
                android:textColor="@color/textColorDeep"
                android:textSize="@dimen/s_34sp"
                android:text="续费" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d_64dp"
        android:layout_marginTop="@dimen/d_10dp"
        android:text="已购课程"
        android:textColor="@color/textColor"
        android:textSize="@dimen/s_42sp"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_dandian"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:focusable="false"
        android:paddingBottom="@dimen/d_30dp"
        android:paddingLeft="@dimen/d_64dp"
        android:paddingRight="@dimen/d_120dp"
        android:paddingTop="@dimen/d_30dp" />
</LinearLayout>
