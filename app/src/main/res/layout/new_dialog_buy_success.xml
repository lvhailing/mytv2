<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_black_transparent">

    <RelativeLayout
        android:layout_width="@dimen/d_620dp"
        android:layout_height="@dimen/d_800dp"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/new_bg_dialog"/>

        <RelativeLayout
            android:layout_width="@dimen/d_500dp"
            android:layout_height="@dimen/d_570dp"
            android:layout_marginBottom="@dimen/d_106dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/new_dialog_buy_success">

            <TextView
                android:id="@+id/tv_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="恭喜您，成功购买了\n（产品名称）"
                android:textColor="@color/textColorDeepNew"
                android:textSize="@dimen/s_46sp"
                android:textStyle="bold"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/d_60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_watch_now"
                android:layout_width="@dimen/d_240dp"
                android:layout_height="@dimen/d_100dp"
                android:background="@drawable/new_shape_orange_btn"
                android:focusable="true"
                android:gravity="center"
                android:text="现在就看"
                android:textColor="@color/textColorLight"
                android:textSize="@dimen/s_42sp"/>

            <TextView
                android:id="@+id/tv_stay_this_page"
                android:layout_width="@dimen/d_240dp"
                android:layout_height="@dimen/d_100dp"
                android:layout_marginLeft="@dimen/d_50dp"
                android:background="@drawable/new_shape_orange_light_btn"
                android:focusable="true"
                android:gravity="center"
                android:text="留在此页"
                android:textColor="@color/textColor"
                android:textSize="@dimen/s_42sp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>