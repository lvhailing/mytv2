<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_color_deep"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/d_300dp"
        android:layout_height="@dimen/d_570dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/new_shape_rect_card_order_vip"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dandian_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_120dp"
                android:text="19"
                android:textColor="@color/text_red"
                android:textSize="@dimen/s_100sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_120dp"
                android:text="元/单"
                android:textColor="@color/text_red"
                android:textSize="@dimen/s_44sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_50dp"
            android:layout_marginTop="@dimen/d_50dp"
            android:text="单点"
            android:textColor="@color/textColorCourse"
            android:textSize="@dimen/s_60sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_50dp"
            android:text="套餐"
            android:textColor="@color/textColorCourse"
            android:textSize="@dimen/s_60sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/d_1220dp"
        android:layout_height="@dimen/d_797dp"
        android:layout_centerInParent="true"
        android:background="@drawable/new_shape_rect_card_order_vip"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_123dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/d_487dp"
                android:layout_height="@dimen/d_487dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/d_92dp"
                android:background="@drawable/new_shape_rect_white">

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="@dimen/d_420dp"
                    android:layout_height="@dimen/d_420dp"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/new_test1"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d_110dp"
                android:layout_marginTop="@dimen/d_13dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="扫码支付"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/s_34sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="99.9"
                    android:textColor="@color/text_red"
                    android:textSize="@dimen/s_46sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/s_34sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d_160dp"
                android:layout_marginTop="@dimen/d_27dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/d_70dp"
                    android:layout_height="@dimen/d_70dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/new_ic_wxzf"/>

                <ImageView
                    android:layout_width="@dimen/d_70dp"
                    android:layout_height="@dimen/d_70dp"
                    android:layout_marginLeft="@dimen/d_30dp"
                    android:src="@mipmap/new_ic_zfbzf"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_20dp"
            android:layout_marginTop="@dimen/d_168dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_year_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="99.9"
                    android:textColor="@color/text_red"
                    android:textSize="@dimen/s_180sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元/年"
                    android:textColor="@color/text_red"
                    android:textSize="@dimen/s_60sp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(原价234元)"
                android:textColor="@color/bg_color_deep"
                android:textSize="@dimen/s_36sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_43dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d_50dp"
                    android:text="所有视频都可以观看"
                    android:textColor="@color/textColorCourse"
                    android:textSize="@dimen/s_32sp"/>

                <ImageView
                    android:layout_width="@dimen/d_198dp"
                    android:layout_height="@dimen/d_226dp"
                    android:layout_marginLeft="@dimen/d_38dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/new_ic_limited_special"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/d_300dp"
        android:layout_height="@dimen/d_570dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/new_shape_rect_card_order_vip"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_month_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d_80dp"
                android:layout_marginTop="@dimen/d_120dp"
                android:text="45"
                android:textColor="@color/text_red"
                android:textSize="@dimen/s_100sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_120dp"
                android:text="元/月"
                android:textColor="@color/text_red"
                android:textSize="@dimen/s_44sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_127dp"
            android:layout_marginTop="@dimen/d_50dp"
            android:text="包月"
            android:textColor="@color/textColorCourse"
            android:textSize="@dimen/s_60sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_127dp"
            android:text="套餐"
            android:textColor="@color/textColorCourse"
            android:textSize="@dimen/s_60sp"/>
    </LinearLayout>

</RelativeLayout>