<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@color/dialog_black_transparent">

    <RelativeLayout
        android:layout_width="@dimen/d_876dp"
        android:layout_height="@dimen/d_688dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:background="@mipmap/new_bg_dialog_buy_vip">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:gravity="center_horizontal"
            android:layout_marginLeft="@dimen/d_144dp"
            android:layout_marginRight="@dimen/d_144dp"
            android:layout_marginTop="@dimen/d_360dp"
            android:layout_marginBottom="@dimen/d_198dp"
            android:text="小朋友需要开通vip才可以\n观看哦，快去找你爸爸妈妈"
            android:textColor="@color/textColorDeepNew"
            android:textSize="@dimen/s_46sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/d_52dp"
            android:layout_marginTop="@dimen/d_40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_watch_now"
                android:layout_width="@dimen/d_240dp"
                android:layout_height="@dimen/d_100dp"
                android:background="@drawable/new_shape_orange_btn"
                android:focusable="true"
                android:gravity="center"
                android:text="去开通"
                android:textColor="@color/textColorLight"
                android:textSize="@dimen/s_42sp"/>

            <TextView
                android:id="@+id/tv_stay_this_page"
                android:layout_width="@dimen/d_240dp"
                android:layout_height="@dimen/d_100dp"
                android:layout_marginLeft="@dimen/d_50dp"
                android:background="@drawable/new_shape_orange_light_btn"
                android:focusable="true"
                android:gravity="center"
                android:text="一会去"
                android:textColor="@color/textColor"
                android:textSize="@dimen/s_42sp"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>