<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:layout_width="@dimen/d_100dp"
        android:layout_height="@dimen/d_100dp"
        android:layout_marginRight="@dimen/d_14dp"
        android:background="@drawable/new_shape_first_course"
        android:gravity="center"
        android:textColor="@color/textColorLight"
        android:textSize="@dimen/s_40sp"
        android:visibility="gone"
        tools:text="01"/>

    <TextView
        android:layout_width="@dimen/d_100dp"
        android:layout_height="@dimen/d_100dp"
        android:background="@drawable/new_shape_second_course"
        android:gravity="center"
        android:textColor="@color/textColorLight"
        android:textSize="@dimen/s_40sp"
        tools:text="02"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d_48dp">

        <RelativeLayout
            android:layout_width="@dimen/d_70dp"
            android:layout_height="@dimen/d_30dp">

            <TextView
                android:id="@+id/tv_try_and_see"
                android:layout_width="@dimen/d_70dp"
                android:layout_height="@dimen/d_30dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/new_shape_rect_orange"
                android:paddingLeft="@dimen/d_10dp"
                android:paddingRight="@dimen/d_10dp"
                android:text="试看"
                android:textColor="@color/textColorLight"
                android:textSize="@dimen/s_22sp"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="@dimen/d_60dp"
            android:layout_height="@dimen/d_30dp"
            android:layout_marginTop="@dimen/d_30dp"
            android:paddingRight="@dimen/d_14dp"
            android:scaleType="fitXY"
            android:src="@drawable/new_shape_reverse_triangle"/>

    </RelativeLayout>

</RelativeLayout>